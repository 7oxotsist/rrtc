# Конфигурация Rust WebRTC SFU через переменные окружения

# Порт для WebSocket signaling
SIGNALING_PORT=8080

# Адрес для прослушивания
LISTEN_ADDRESS=0.0.0.0

# Максимальное количество участников в комнате
MAX_PARTICIPANTS=50

# Детальное логирование (true/false)
VERBOSE_LOGGING=false

# Путь к файлу конфигурации (опционально)
# CONFIG_FILE=config.toml

# ===== TURN/STUN Configuration =====

# Один TURN сервер
# TURN_URL=turn:your-turn-server.com:3478
# TURN_USERNAME=your-username
# TURN_CREDENTIAL=your-password

# Несколько TURN серверов (разделенные запятыми)
# TURN_URLS=turn:server1.com:3478,turn:server2.com:3478
# TURN_USERNAME=your-username
# TURN_CREDENTIAL=your-password

# Пример конфигурации для coturn
# TURN_URL=turn:your-domain.com:3478
# TURN_USERNAME=webrtc
# TURN_CREDENTIAL=your-secure-password

# Пример конфигурации для Metered TURN
# TURN_URLS=turn:a.relay.metered.ca:80,turn:a.relay.metered.ca:443
# TURN_USERNAME=your-metered-api-key
# TURN_CREDENTIAL=your-metered-secret

# ===== TLS Configuration =====
# TLS_ENABLED=false
# TLS_CERT_PATH=/path/to/cert.pem
# TLS_KEY_PATH=/path/to/key.pem

# ===== Rust Log Level =====
# RUST_LOG=info
# Возможные значения: trace, debug, info, warn, error
# Для детального логирования WebRTC: RUST_LOG=webrtc=debug,rrtc=debug
